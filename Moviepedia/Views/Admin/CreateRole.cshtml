@model string

<div style="display:flex; flex-flow:column; height:100%; width:100%; position:absolute; right:0; left:0;">
    <div style="margin:auto;">
            <form asp-action="CreateRole" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label for="name" class="control-label" style="margin-bottom:0.5rem">New role</label>
                    <input name="name" class="form-control" style="margin-bottom:1rem" />
                </div>
                <div class="form-group">
                    <input type="submit" value="Add" class="btn btn-outline-info" style="margin-top:1rem" />
                </div>
            </form>
        <br />
        <div>
            <a asp-action="GetRoles" class="btn btn-outline-info">Back</a>
        </div>
    </div>
</div>