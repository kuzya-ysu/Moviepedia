@model Microsoft.AspNetCore.Identity.IdentityRole

<div style="display:flex; flex-flow:column; height:100%; width:100%; position:absolute; right:0; left:0;">
    <div style="margin:auto;">
        <h2 class="display-6" style="margin-bottom: 3rem">Are you sure you want to delete this role?</h2>
        <div>
            <dl class="row">
                <dt class="col-sm-2">Role</dt>
                <dd class="col-sm-10">@Model.Name</dd>
            </dl>

            <form asp-action="DeleteRole" asp-route-id=@Model.Id>
                <input type="submit" value="Yes" class="btn btn-outline-info" />
            </form>
            <div class="row" align="center">
                <a asp-action="GetRoles" class="btn btn-outline-info" style="max-width:10rem; margin-top:3rem">Back</a>
            </div>
        </div>
    </div>
</div>